<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FilmTableServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlets.FilmTableServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FilmTableServlet</servlet-name>
        <url-pattern>/films</url-pattern>
    </servlet-mapping>

</web-app>